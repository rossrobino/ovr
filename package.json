	"devDependencies": {
		"@changesets/cli": "^2.28.1",
		"@robino/prettier": "^1.0.2",
		"@robino/tsconfig": "^1.0.2",
		"prettier": "^3.5.3",
		"typescript": "^5.8.2",
		"vitest": "^3.1.1"
	},
	"prettier": "@robino/prettier"
}
